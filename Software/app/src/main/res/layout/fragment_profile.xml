<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="16dp">


    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Profil"
        android:textSize="24sp"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_marginBottom="24dp"
        android:fontFamily="sans-serif-medium" />


    <TextView
        android:id="@+id/usernameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Korisničko ime: Učitavam..."
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginBottom="16dp"
        android:fontFamily="sans-serif" />


    <TextView
        android:id="@+id/emailTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email: Učitavam..."
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginBottom="24dp"
        android:fontFamily="sans-serif" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="24dp">

        <TextView
            android:id="@+id/notificationTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Omogući obavijesti"
            android:textSize="16sp"
            android:textColor="#000000"
            android:fontFamily="sans-serif" />

        <Switch
            android:id="@+id/notificationSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:thumbTint="#D32F2F"
            android:trackTint="#FFCDD2" />
    </LinearLayout>

    <TextView
        android:id="@+id/preferenceTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Preferiram:"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginBottom="8dp"
        android:fontFamily="sans-serif" />


    <Spinner
        android:id="@+id/preferenceSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:spinnerMode="dropdown"
        android:background="@android:drawable/btn_dropdown"
        android:padding="16dp" />



    <Button
        android:id="@+id/button_view_reviews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pogledaj recenzije"
        android:textColor="#FFFFFF"
        android:backgroundTint="#612B2B"
        android:layout_gravity="center_horizontal"
        android:padding="8dp"
        android:elevation="4dp" />

</LinearLayout>
